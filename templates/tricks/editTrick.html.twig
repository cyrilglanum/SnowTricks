{% extends 'base.html.twig' %}

{% block title %}Modifier Trick{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}



    <div class="container">
        <h1>Modifier un trick</h1>
        {# <p style="color: green"> {{ message }}</p> #}
        {{ form_start(form) }}
        {{ form_row(form.name) }}
        {{ form_row(form.img_background) }}
        {% if trick.imgBackground is defined %}
            <img src="{{ asset('uploads/tricksFile') }}/{{ trick.imgBackground }}" style="width: 300px">
        {% endif %}
        {{ form_row(form.description) }}
        {{ form_row(form.groupe) }}
        <button type="submit" class="mt-3 btn btn-primary">Modifier mon trick</button>
        {{ form_end(form) }}
    </div>
{% endblock %}
