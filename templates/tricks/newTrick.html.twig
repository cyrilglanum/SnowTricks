{% extends 'base.html.twig' %}

{% block title %}Ajouter Trick{% endblock %}

{% block body %}

    <div class="container">
        <h2 class="mt-3 mb-5">Ajouter un trick</h2>
        <p style="color: green"> {{ message ?? null }}</p>
        {{ form_start(form) }}
        {{ form_row(form.name) }}
        {{ form_row(form.img_background) }}
        {{ form_row(form.description) }}
        {{ form_row(form.groupe) }}
        {{ form_row(form.images) }}
        {{ form_row(form.videos) }}
        <button type="submit" class="mt-3 btn btn-dark" style="border-radius: 5px
">Ajouter mon trick</button>
        {{ form_end(form) }}
    </div>
{% endblock %}
