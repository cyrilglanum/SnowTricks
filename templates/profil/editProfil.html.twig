{% extends 'base.html.twig' %}

{% block title %}Modifier profil{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}



    <div class="container">
        <h2 class="mt-3 mb-5">Modifier mon profil</h2>
        {{ form_start(form) }}
        {{ form_row(form.username) }}
        {# {{ form_row(form.email) }} #}
        {{ form_row(form.image) }}
        {% if user.image is not null %}
            <img src="{{ asset('uploads/tricksFile') }}/{{ user.image }}" style="width: 300px; margin-top: 30px">
        {% endif %}
        {# {{ form_row(form.password) }} #}
        <button type="submit" class="mt-3 btn btn-dark" style="border-radius: 5px">Modifier mon profil</button>
        {{ form_end(form) }}
    </div>
{% endblock %}
