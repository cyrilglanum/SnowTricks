{% extends 'base.html.twig' %}

{% block title %}Ajouter Media{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}



    <div class="container">
        <h1>Ajouter un média</h1>
        <p style="color: green"> {{ message ?? null }}</p>
        {{ form_start(form) }}
        {{ form_row(form.type) }}
        {{ form_row(form.url) }}
        {{ form_row(form.url_video) }}
        {{ form_row(form.description) }}
        <button type="submit" class="mt-3 btn btn-primary">Ajouter mon média</button>
        {{ form_end(form) }}
    </div>
{% endblock %}
