{% extends 'base.html.twig' %}

{% block body %}

    <div class="example-wrapper">

        {% for message in app.flashes('success') %}
            <div class="alert alert-success mt-3" role="alert">{{ message }}</div>
        {% endfor %}

        <img src="{{ asset('snow2.jpg') }}" style="width: 100%; height:900px">
        <h2 class="mt-3">Les figures présentes sur notre site</h2>
        <div class="container mt-5" id="tricks">
            <div class="col-12">
                <div class="row">


                    {% for trick in tricks %}
                        <div class="col-sm-12 col-md-9 col-xl-3" >
                            <div style="height: 350px">
                            <h2>{{ trick.name }}</h2>
                            <br>
                                <a href="{{ url('trick', {'id' : trick.id }) }}"><img src="{{ asset('uploads/tricksFile') }}/{{ trick.imgBackground }}" width="100%" style="max-height: 240px">
{#                            <p>{{ trick.description }}</p>#}
                            <em> crée le {{ trick.dateCreation|date('Y-m-d à H:i:s') }}</em><br>
                            </a>
                            {# get current user #}
                            {% if user.email is defined %}
                                {% if user.email == "cyril@glanum.com" %}
                                    <a href="{{ url('editTrick',{'trick_id' : trick.id}) }}"><i class="fas fa-edit"></i></a>
                                    <a href="{{ url('deleteTrick',{'id' : trick.id}) }}"
                                       onclick=" var result = confirm('Êtes vous sur de vouloir supprimer le média?');return result"><i class="fas fa-trash"></i></a>
                                {% endif %}
                            {% endif %}
                            </div> <hr>
                        </div>
                    {% endfor %}

                </div>

            </div>
        </div>
    </div>



{% endblock %}
