{% extends 'base.html.twig' %}

{% block body %}

    <div class="example-wrapper">

        <img src="{{ asset('snow2.jpg') }}" style="width: 100%; height:900px">

        <div class="container mt-5" id="tricks">


            <h2 class="mt-3 mb-5">Forum</h2>

            <a class="" href="{{ url('newComment') }}"><button class="btn btn-dark">Ajouter commentaire</button></a>
            <div class="col-12">
                    {% for comment in comments %}
                    <div class="col-sm-12 col-md-12 col-xl-12">
                        <h3>{{ comment.author }}</h3>
                        <br>
                        <p>{{ comment.message }}</p>
                    <em> crée le {{ comment.createdAt|date('Y-m-d à H:i:s') }}</em><br>
                    {% if user.email is defined %}
                        {% if user.email == "cyril@glanum.com" %}
                            <a href="{{ url('deleteComment',{'id' : comment.id}) }}"
                               onclick=" var result = confirm('Êtes vous sur de vouloir supprimer le média?');return result"><i
                                        class="fas fa-trash"></i>
                            </a>
                        {% endif %}
                    {% endif %}
                    <hr>
                </div>
            {% endfor %}
        </div>
        </div>
        </div>

{% endblock %}
