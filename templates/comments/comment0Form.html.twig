{% extends 'base.html.twig' %}

{% block title %}Ajouter commentaire{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}



    <div class="container">
        <h1>Ajouter un commentaire sur le forum</h1>
        {{ form_start(form) }}
        {{ form_row(form.message) }}
        {{ form_row(form.user_id) }}
        <button type="submit" class="mt-3 btn btn-dark">Ajouter mon commentaire</button>
        {{ form_end(form) }}
    </div>
{% endblock %}
