{% extends 'base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe{% endblock %}

{% block body %}
    <div class="container">
        <h1>Réinitialiser votre mot de passe</h1>

        {{ form_start(form) }}
        {{ form_row(form.email) }}
        {{ form_row(form.newPassword) }}
        {{ form_row(form.token) }}
        <button class="btn btn-primary">Reset password</button>
        {{ form_end(form) }}
    </div>
{% endblock %}
